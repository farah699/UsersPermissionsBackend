# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/users-permissions-db

# MongoDB Atlas (Alternative - uncomment and configure)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/users-permissions-db?retryWrites=true&w=majority

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate secure random strings for production
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-this-in-production-min-32-chars

# Token Expiration Times
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# ADMIN USER CONFIGURATION (for seeding)
# ==============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass123!

# Optional: Additional admin user details
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Password hashing rounds (10-12 recommended)
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100    # Maximum requests per window

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# ==============================================
# EMAIL CONFIGURATION (Optional but recommended)
# ==============================================
# Email service for password change notifications and password reset
EMAIL_FROM=noreply@opuslab.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# For Gmail, use your email and an app password (not your regular password)
# Instructions: https://support.google.com/accounts/answer/185833
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_16_character_app_password

# Note: If SMTP credentials are not provided, emails will be simulated (logged to console)
# This allows the application to work without email configuration for development

# ==============================================
# OPTIONAL FEATURES
# ==============================================
# Logging Level (error, warn, info, verbose, debug)
LOG_LEVEL=info

# Session Configuration
SESSION_TIMEOUT=24h

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# Set to true to enable detailed error messages in development
DEBUG_MODE=true

# Database seeding (set to false to skip auto-seeding)
AUTO_SEED_DB=true